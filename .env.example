# .env.example
# Example environment variables for Docker Compose
# Docker Compose için örnek ortam değişkenleri
# Copy this file to .env and fill in your actual values
# Bu dosyayı .env olarak kopyalayın ve gerçek değerlerinizi doldurun

# === General Configuration / Genel Yapılandırma ===
NODE_ENV=production
LOG_LEVEL=info

# === API Gateway Configuration / API Gateway Yapılandırması ===
API_HOST=0.0.0.0
API_PORT=8080

# === Web Application Configuration / Web Uygulaması Yapılandırması ===
WEB_PORT=3001
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# === Worker Jobs Configuration / Worker Jobs Yapılandırması ===
WORKER_CONCURRENCY=10

# === Database Configuration / Veritabanı Yapılandırması ===
# PostgreSQL connection string
# PostgreSQL bağlantı dizini
DATABASE_URL=postgresql://ai_chat_user:ai_chat_password@db:5432/ai_chat_db?schema=public

# === Redis Configuration / Redis Yapılandırması ===
# Redis connection string
# Redis bağlantı dizini
REDIS_URL=redis://redis:6379

# === Ollama Configuration / Ollama Yapılandırması ===
OLLAMA_BASE_URL=http://ollama:11434
DEFAULT_MODEL=llama3.1

# === Authentication & Security / Kimlik Doğrulama ve Güvenlik ===
# IMPORTANT: Change this to a long, random secret in production!
# ÖNEMLİ: Production'da bunu uzun, rastgele bir gizli anahtarla değiştirin!
JWT_SECRET=change_this_in_prod_min_16_chars
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_TTL_DAYS=30
BCRYPT_SALT_ROUNDS=10

# === Rate Limiting / Hız Sınırlama ===
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW_MS=60000

# === Telemetry & Metrics / Telemetri ve Metrikler ===
# Optional: Prometheus metrics port
# İsteğe bağlı: Prometheus metrikleri portu
# PROMETHEUS_METRICS_PORT=9100

# Optional: OpenTelemetry endpoint
# İsteğe bağlı: OpenTelemetry endpoint'i
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# === Multi-Tenancy & Misc / Çok Kiracılılık ve Diğer ===
DEFAULT_TENANT_NAME=Default Org
ALLOW_SIGNUP=true

# === Docker Compose Specific / Docker Compose Özel ===
# These are used by docker-compose.yml
# Bunlar docker-compose.yml tarafından kullanılır

# PostgreSQL credentials (for docker-compose)
# PostgreSQL kimlik bilgileri (docker-compose için)
POSTGRES_USER=ai_chat_user
POSTGRES_PASSWORD=ai_chat_password
POSTGRES_DB=ai_chat_db
